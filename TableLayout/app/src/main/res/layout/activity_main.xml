<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="290dp"
    android:layout_gravity="bottom"
    android:clickable="true"
    android:divider="10dp"
    android:dividerPadding="2dp"
    android:gravity="center"
    tools:context=".MainActivity">

    <TableRow
        android:layout_width="wrap_parent"
        android:layout_height="wrap_parent"
        android:padding="2dip"  >

        <Button
            android:id="@+id/btn1"
            android:text="1"/>
        <Button
            android:id="@+id/btn2"
            android:text="2"/>
        <Button
            android:id="@+id/btn3"
            android:text="3"/>
        <Button
            android:id="@+id/btn4"
            android:text="/"/>
    </TableRow>
    <TableRow
        android:layout_width="wrap_parent"
        android:layout_height="wrap_parent"
        android:padding="5dip"  >

        <Button
            android:id="@+id/btn5"
            android:text="4"/>
        <Button
            android:id="@+id/btn6"
            android:text="5"/>
        <Button
            android:id="@+id/btn7"
            android:text="6"/>
        <Button
            android:id="@+id/btn8"
            android:text="*"/>
    </TableRow>
    <TableRow
        android:layout_width="wrap_parent"
        android:layout_height="wrap_parent"
        android:padding="5dip"  >

        <Button
            android:id="@+id/btn9"
            android:text="7"/>
        <Button
            android:id="@+id/btn10"
            android:text="8"/>
        <Button
            android:id="@+id/btn11"
            android:text="9"/>
        <Button
            android:id="@+id/btn12"
            android:text="+"/>
    </TableRow>
    <TableRow
        android:layout_width="wrap_parent"
        android:layout_height="wrap_parent"
        android:padding="5dip"  >

        <Button
            android:id="@+id/btn13"
            android:text="."/>
        <Button
            android:id="@+id/btn14"
            android:text="0"/>
        <Button
            android:id="@+id/btn15"
            android:text="="/>
        <Button
            android:id="@+id/btn16"
            android:text="-"/>
    </TableRow>

    <TableRow
        android:layout_width="wrap_parent"
        android:layout_height="wrap_parent"
        android:padding="5dip">

        <Button
            android:id="@+id/btn17"
            android:text="DEL" />

    </TableRow>
</TableLayout>