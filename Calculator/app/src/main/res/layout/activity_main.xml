<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="161dp"
        android:layout_marginStart="12dp"
        android:text="9"
        android:visibility="visible"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="266dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn5"
        android:layout_toEndOf="@+id/btn9"
        android:text="8"
        android:layout_toRightOf="@+id/btn9" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn4"
        android:layout_toEndOf="@+id/btn8"
        android:text="7"
        android:layout_toRightOf="@+id/btn8" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn9"
        android:layout_above="@+id/btn3"
        android:text="6"
        android:layout_alignLeft="@+id/btn9" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn2"
        android:layout_toEndOf="@+id/btn6"
        android:text="5"
        android:layout_toRightOf="@+id/btn6" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn3"
        android:layout_toEndOf="@+id/btn5"
        android:text="4"
        android:layout_toRightOf="@+id/btn5" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn0"
        android:layout_alignStart="@+id/btn9"
        android:text="3"
        android:layout_alignLeft="@+id/btn9" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn3"
        android:layout_toEndOf="@+id/btn3"
        android:text="2"
        android:layout_toRightOf="@+id/btn3" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn3"
        android:layout_toEndOf="@+id/btn2"
        android:text="1"
        android:layout_toRightOf="@+id/btn2" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnAdd"
        android:layout_toEndOf="@+id/btnDot"
        android:text="0"
        android:layout_toRightOf="@+id/btnDot" />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_below="@+id/btn9"
        android:layout_marginTop="-168dp"
        android:layout_toEndOf="@+id/btn7"
        android:layout_toRightOf="@+id/btn7"
        android:text="/" />

    <Button
        android:id="@+id/btnMul"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_below="@+id/btnDiv"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/btn7"
        android:text="*"
        android:visibility="visible"
        android:layout_toRightOf="@+id/btn7" />

    <Button
        android:id="@+id/btnSub"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_below="@+id/btnMul"
        android:layout_toEndOf="@+id/btn7"
        android:text="-"
        android:visibility="visible"
        android:layout_toRightOf="@+id/btn7" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_below="@+id/btnSub"
        android:layout_toEndOf="@+id/btn7"
        android:text="+"
        android:visibility="visible"
        android:layout_toRightOf="@+id/btn7" />

    <Button
        android:id="@+id/btnDot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn9"
        android:layout_alignTop="@+id/btn0"
        android:text="."
        android:visibility="visible"
        android:layout_alignLeft="@+id/btn9" />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn3"
        android:layout_toEndOf="@+id/btn8"
        android:text="="
        android:visibility="visible"
        android:layout_toRightOf="@+id/btn8" />

    <Button
        android:id="@+id/btnDel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:text="Del"
        android:visibility="visible"
        android:layout_toRightOf="@+id/btn7" />

    <TextView
        android:id="@+id/Result"
        android:layout_width="353dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/btnDiv"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnDel"
        android:layout_marginTop="222dp"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/Input"
        android:layout_width="353dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/btnDiv"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnDel"
        android:layout_marginTop="158dp"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

</RelativeLayout>